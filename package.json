{
  "name": "plugnmeet-client",
  "version": "1.8.0",
  "author": "Jibon L. Costa",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "vite",
    "build": "vite build",
    "build-netlify": "pnpm run build && cp dist/assets/config_sample.js dist/assets/config.js",
    "lint": "oxlint --config=./.oxlintrc.json --fix",
    "lint:check": "oxlint --config=./.oxlintrc.json",
    "format:check": "prettier --check src/**/*.{jsx,ts,tsx}",
    "prepare": "husky",
    "size-limit": "pnpm run build && size-limit --json"
  },
  "dependencies": {
    "@bufbuild/protobuf": "2.6.3",
    "@excalidraw/excalidraw": "0.18.0",
    "@headlessui/react": "2.2.7",
    "@nats-io/jetstream": "3.1.0",
    "@nats-io/nats-core": "3.1.0",
    "@reduxjs/toolkit": "2.8.2",
    "@tensorflow-models/body-pix": "2.2.1",
    "@tensorflow/tfjs": "4.22.0",
    "axios": "1.11.0",
    "clsx": "2.1.1",
    "copy-text-to-clipboard": "3.2.0",
    "emoji-picker-react": "4.13.2",
    "es-toolkit": "1.39.9",
    "eventemitter3": "5.0.1",
    "framer-motion": "12.23.12",
    "i18next": "25.3.4",
    "i18next-browser-languagedetector": "8.2.0",
    "i18next-http-backend": "3.0.2",
    "livekit-client": "2.15.4",
    "microsoft-cognitiveservices-speech-sdk": "1.45.0",
    "mobile-detect": "1.4.5",
    "nosleep.js": "0.12.0",
    "plugnmeet-protocol-js": "1.0.16-15",
    "react": "19.1.1",
    "react-cool-virtual": "0.7.0",
    "react-dnd": "16.0.1",
    "react-dnd-html5-backend": "16.0.1",
    "react-dom": "19.1.1",
    "react-draggable": "4.5.0",
    "react-hotkeys-hook": "5.1.0",
    "react-i18next": "15.6.1",
    "react-player": "2.16.0",
    "react-redux": "9.2.0",
    "react-toastify": "11.0.5",
    "resumablejs": "1.1.0",
    "sanitize-html": "2.17.0",
    "validator": "13.15.15",
    "video.js": "8.23.4"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "0.0.4",
    "@size-limit/preset-app": "11.2.0",
    "@tailwindcss/vite": "4.1.11",
    "@types/emscripten": "1.40.1",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7",
    "@types/sanitize-html": "2.16.0",
    "@types/video.js": "7.3.58",
    "@vitejs/plugin-react-oxc": "0.4.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.5",
    "oxlint": "1.11.2",
    "prettier": "3.6.2",
    "tailwindcss": "4.1.11",
    "typescript": "5.9.2",
    "vite": "npm:rolldown-vite@7.1.2",
    "vite-plugin-static-copy": "3.1.1"
  },
  "lint-staged": {
    "**/*.{jsx,ts,tsx}": [
      "oxlint --fix",
      "prettier --write"
    ],
    "**/*.{css,scss}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "name": "JS files",
      "path": [
        "dist/assets/js/*.js",
        "dist/assets/lti/js"
      ]
    },
    {
      "name": "CSS files",
      "path": [
        "dist/assets/css",
        "dist/assets/lti/css"
      ]
    },
    {
      "name": "Locales files",
      "path": "dist/assets/locales"
    },
    {
      "name": "Image files",
      "path": [
        "dist/assets/imgs",
        "dist/assets/backgrounds"
      ]
    },
    {
      "name": "Font files",
      "path": "dist/assets/fonts"
    },
    {
      "name": "Webassembly files",
      "path": [
        "dist/assets/js/*.wasm",
        "dist/assets/models"
      ]
    },
    {
      "name": "All assets",
      "path": "dist/assets"
    }
  ]
}
