{
  "name": "plugnmeet-client",
  "version": "1.8.0",
  "author": "Jibon L. Costa",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "start": "vite",
    "build": "vite build",
    "build-netlify": "pnpm run build && cp dist/assets/config_sample.js dist/assets/config.js",
    "lint": "eslint src/**/*.{jsx,ts,tsx} --fix && prettier --write src/**/*.{jsx,ts,tsx}",
    "lint:check": "eslint src/**/*.{jsx,ts,tsx}",
    "format:check": "prettier --check src/**/*.{jsx,ts,tsx}",
    "prepare": "husky",
    "size-limit": "pnpm run build && size-limit --json"
  },
  "dependencies": {
    "@bufbuild/protobuf": "2.5.2",
    "@excalidraw/excalidraw": "0.18.0",
    "@headlessui/react": "2.2.4",
    "@nats-io/jetstream": "3.0.2",
    "@nats-io/nats-core": "3.0.2",
    "@reduxjs/toolkit": "2.8.2",
    "@tensorflow-models/body-pix": "2.2.1",
    "@tensorflow/tfjs": "4.22.0",
    "axios": "1.10.0",
    "clsx": "2.1.1",
    "copy-text-to-clipboard": "3.2.0",
    "emoji-picker-react": "4.12.2",
    "es-toolkit": "1.39.5",
    "eventemitter3": "5.0.1",
    "framer-motion": "12.19.1",
    "i18next": "25.2.1",
    "i18next-browser-languagedetector": "8.2.0",
    "i18next-http-backend": "3.0.2",
    "livekit-client": "2.13.8",
    "microsoft-cognitiveservices-speech-sdk": "1.44.1",
    "mobile-detect": "1.4.5",
    "nosleep.js": "0.12.0",
    "plugnmeet-protocol-js": "1.0.16-9",
    "react": "19.1.0",
    "react-cool-virtual": "0.7.0",
    "react-dnd": "16.0.1",
    "react-dnd-html5-backend": "16.0.1",
    "react-dom": "19.1.0",
    "react-draggable": "npm:@tdaniil/react-draggable@5.0.1",
    "react-hotkeys-hook": "5.1.0",
    "react-i18next": "15.5.3",
    "react-player": "2.16.0",
    "react-redux": "9.2.0",
    "react-toastify": "11.0.5",
    "resumablejs": "1.1.0",
    "sanitize-html": "2.17.0",
    "validator": "13.15.15",
    "video.js": "8.23.3"
  },
  "devDependencies": {
    "@eslint/js": "9.29.0",
    "@size-limit/preset-app": "11.2.0",
    "@tailwindcss/vite": "4.1.10",
    "@types/emscripten": "1.40.1",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/sanitize-html": "2.16.0",
    "@types/video.js": "7.3.58",
    "@vitejs/plugin-react": "4.6.0",
    "babel-plugin-react-compiler": "19.1.0-rc.2",
    "eslint": "9.29.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.5.1",
    "eslint-plugin-react-hooks": "5.2.0",
    "globals": "16.2.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "prettier": "3.6.1",
    "tailwindcss": "4.1.10",
    "typescript": "5.8.3",
    "typescript-eslint": "8.35.0",
    "vite": "7.0.0",
    "vite-plugin-static-copy": "3.1.0"
  },
  "lint-staged": {
    "**/*.{jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{css,scss}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "name": "JS files",
      "path": [
        "dist/assets/js/*.js",
        "dist/assets/lti/js"
      ]
    },
    {
      "name": "CSS files",
      "path": [
        "dist/assets/css",
        "dist/assets/lti/css"
      ]
    },
    {
      "name": "Locales files",
      "path": "dist/assets/locales"
    },
    {
      "name": "Image files",
      "path": [
        "dist/assets/imgs",
        "dist/assets/backgrounds"
      ]
    },
    {
      "name": "Font files",
      "path": "dist/assets/fonts"
    },
    {
      "name": "Webassembly files",
      "path": [
        "dist/assets/js/*.wasm",
        "dist/assets/models"
      ]
    },
    {
      "name": "All assets",
      "path": "dist/assets"
    }
  ]
}
